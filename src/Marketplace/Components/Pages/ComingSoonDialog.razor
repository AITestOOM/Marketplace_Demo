@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Construction" Class="mr-2" />
            Funkcia v Príprave
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>Ďakujeme za váš záujem! Táto kategória bude dostupná v najbližšej verzii aplikácie.</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Rozumiem</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}