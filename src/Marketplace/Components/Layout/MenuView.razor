@using Marketplace.Components.Pages
@using MudBlazor
@inject IDialogService DialogService

<div class="menu-container-wrapper">
    <div class="d-flex align-center mb-4">
        <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" OnClick="@(() => OnClose.InvokeAsync())" Edge="Edge.Start" Color="Color.Primary" />
        <div class="ml-4">
             <svg width="163" height="32" viewBox="0 0 163 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M27.1 3L12.376 28.7296L12.025 29.129H7.29999L22.375 3H27.1Z" fill="white"/>
                <path d="M31 7.0545L18.4 29.129H13.45L26.05 7.0545H31Z" fill="white"/>
                <path d="M16.15 11.4093L5.875 29.129H1L11.275 11.4093H16.15Z" fill="white"/>
            </svg>
        </div>
    </div>

    <div class="greeting-section">
        <MudText Typo="Typo.h5" Style="color: #FFFFFF;">Dobrý deň, Tomáš!</MudText>
    </div>

    <MudList Clickable="true" T="string">
        <MudListItem T="string" Icon="@Icons.Material.Filled.PersonOutline" OnClick="@ShowComingSoonDialog">Profil</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.ChatBubbleOutline" OnClick="@ShowComingSoonDialog">Správy</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.ReceiptLong" OnClick="@ShowComingSoonDialog">Objednávky</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.Settings" OnClick="@ShowComingSoonDialog">Nastavenia</MudListItem>
        <MudListItem T="string" Icon="@Icons.Material.Filled.Logout" OnClick="@ShowComingSoonDialog">Odhlásiť</MudListItem>
    </MudList>
</div>

<style>
    .menu-container-wrapper {
        background-color: #121315;
        color: #e0e0e0;
        padding: 16px;
        height: 100vh;
    }

    .greeting-section {
        padding: 24px 8px;
        border-bottom: 1px solid #2A2B31;
    }
    
    .mud-list-item {
        color: #e0e0e0 !important;
        padding-top: 16px;
        padding-bottom: 16px;
    }

    .mud-list-item .mud-icon-root {
        color: #0081EC !important;
    }
</style>

@code {
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task ShowComingSoonDialog()
    {
        await DialogService.ShowAsync<ComingSoonDialog>("Funkcia v Príprave");
    }
}
